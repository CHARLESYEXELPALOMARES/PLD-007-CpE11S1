#include <iostream>
using namespace std;

int main() {
    int sum = 0; // Initialize sum to 0

    // Loop through numbers from 2 to 100
    for (int i = 2; i <= 100; i += 2) { // Increment by 2 to only consider even numbers
        sum += i; // Add the even number to sum
    }

    // Output the result
    cout << "The sum of even integers from 2 to 100 is: " << sum << endl;
    return 0; // Indicate that the program ended successfully
}
