cpp
#include <iostream>
using namespace std;

int main() {
    int total = 0; // Set total to zero
    int gradeCounter = 1; // Set grade counter to one
    int grade; // Variable to store the grade

    // Loop to input grades for ten students
    while (gradeCounter <= 10) {
        cout << "Enter grade for student " << gradeCounter << ": ";
        cin >> grade; // Input the next grade

        // Check if the grade is in the valid range
        if (grade < 0 || grade > 100) {
            cout << "Please enter a valid grade (0-100)." << endl;
            continue; // Skip the rest of the loop and ask for input again
        }

        total += grade; // Add the grade into the total
        gradeCounter++; // Add one to the grade counter
    }

    // Calculate the class average
    double classAverage = static_cast<double>(total) / 10;

    // Print the class average
    cout << "The class average is: " << classAverage << endl;

    return 0;
}
