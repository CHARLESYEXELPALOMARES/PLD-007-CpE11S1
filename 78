cpp
#include <iostream>
using namespace std;

int main() {
    int age;
    double fare;
    const double MIN_FARE = 9.0;

    // Input age and fare
    cout << "Enter your age (5 to 24 or 60 and above): ";
    cin >> age;
    cout << "Enter the fare amount: ";
    cin >> fare;

    // Ensure fare is at least the minimum
    fare = (fare < MIN_FARE) ? MIN_FARE : fare;

    // Calculate discount based on age
    if (age < 5) {
        cout << "No discount applicable. Fare: " << fare << " pesos." << endl;
    } else if (age <= 12) { // 5 to 12
        fare *= 0.92; // 8% discount
        cout << "Child fare: " << fare << " pesos." << endl;
    } else if (age <= 24 || age >= 60) { // 13 to 24 or 60 and above
        char isStudent;
        if (age <= 24) {
            cout << "Are you a student? (y/n): ";
            cin >> isStudent;
        } else {
            // For seniors, we assume they are not students, but they can be asked if needed
            cout << "Are you a student? (y/n): ";
            cin >> isStudent;
        }
        
        if (isStudent == 'y' || isStudent == 'Y') {
            fare *= 0.92; // 8% discount for students
        } else if (age >= 60) {
            fare *= 0.90; // 10% discount for seniors
        }
        cout << "Fare: " << fare << " pesos." << endl;
    } else { // Ages 25 to 59
        cout << "No discount applicable. Fare: " << fare << " pesos." << endl;
    }

    return 0;
}
